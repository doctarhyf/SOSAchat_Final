<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"

        android:clickable="true"

        android:background="@drawable/color_state_row_settings"
        style="@style/padTopBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivWli"
        style="@style/styleIvItem"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/paddingNormal"
        android:scaleType="center"
        app:srcCompat="@drawable/progress_animation" />

    <LinearLayout

        style="@style/padLeft"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tvWliName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Item"

            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvWliPriceNQual"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Item Price"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:text="0.00 $"
            android:id="@+id/tvItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:text="Brand New"
            android:id="@+id/tvItemQual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvWliDate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProdStatUnpublished"
            android:text="@string/strUpublished"

            style="@style/prodStat" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvProdStatWaiting"
            android:text="@string/strWaiting"
            style="@style/prodStat.waiting" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvProdStatPublished"
            android:text="@string/strPublished"

            style="@style/prodStat.published" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvProdStatDenied"
            android:text="@string/strDenied"

            style="@style/prodStat.denied" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="18dp"
        android:layout_weight="1
"       android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivProdMenu"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView

            android:clickable="true"
            android:visibility="gone"
            android:id="@+id/ivRmFromWli"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:tint="@color/black"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageView
            android:visibility="gone"
            android:clickable="true"

            android:id="@+id/ivEditMyPd"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:tint="@color/black"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageView

            android:clickable="true"
            android:visibility="gone"
            android:id="@+id/ivSoldMyPd"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:tint="@color/black"
            android:src="@android:drawable/ic_secure" />

    </LinearLayout>




</LinearLayout>