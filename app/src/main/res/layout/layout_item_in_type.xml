<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"

        android:clickable="true"

        android:background="@drawable/color_state_row_settings"
        style="@style/padTopBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivItemInType"
        style="@style/styleIvItem"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/paddingNormal"
        app:srcCompat="@drawable/phantom_4" />

    <LinearLayout

        style="@style/padLeft"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Item"

            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvItemPriceNQual"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Item Price"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvItemPostedOn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Item Quality"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

   <ImageView

        android:clickable="true"

        android:id="@+id/ivAddToWishlist"
        android:layout_marginRight="0dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:tint="@color/black"
        android:src="@android:drawable/ic_input_add" />


</LinearLayout>