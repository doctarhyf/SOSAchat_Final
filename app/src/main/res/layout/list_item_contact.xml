<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"

        android:clickable="true"

        android:background="@drawable/color_state_row_settings"
        style="@style/padTopBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivChatMsg"
        style="@style/styleIvItem"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/genPadding"
        app:srcCompat="@drawable/rhyf_pp" />

    <LinearLayout

        style="@style/padLeft"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tvChatMsgFromName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Docta"

            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvChatMsgLastMsg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hey where are ..."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvChatMsgLastMsgDate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Nov 11"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView

        android:clickable="true"

        android:id="@+id/ivRmChatMsg"
        android:layout_marginRight="0dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:tint="@color/black"
        android:src="@android:drawable/ic_menu_delete" />


</LinearLayout>