<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rhyfdocta.sosachat.ActivityViewAllItemsInType"

    xmlns:tools="http://schemas.android.com/tools"
    >


    <ImageView
        android:id="@+id/ivCatSplash"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/chevy" />


    <android.support.v7.widget.RecyclerView

        android:background="@color/sosBlue"
        android:id="@+id/rvItemsInType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView

        android:background="@color/sosBlue"
        android:id="@+id/tvNoItems"
        android:visibility="invisible"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/msgErrorNoProdInType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>







</LinearLayout>