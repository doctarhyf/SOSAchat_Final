<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.example.rhyfdocta.sosachat.ActivityInquiryView">

    <LinearLayout
        android:padding="16dp"
        android:background="@drawable/settings_header_boder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:id="@+id/tvInqPostername"
                android:text="Inq Poster Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_marginBottom="8dp"
                android:id="@+id/tvInqPosterPhone"
                android:text="0814046908"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_marginBottom="8dp"
                android:id="@+id/tvInqPosterEmail"
                android:text="emutunda@yahoo.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivInqPp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvInqDesc"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:id="@+id/ll2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/sosBlue"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/tvInqTitle"
            android:text="INQ TITLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvInqPostedTime"
            android:text="2 days ago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll3"
        android:id="@+id/tvInqDesc"
        android:text="Inq desc"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvInqDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="contactClient"
            android:id="@+id/btnInqContact"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/contactSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
